{
    "compilerOptions": {
      "noErrorTruncation": true,
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "checkJs": false,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "types": [
        "node"
      ],
      "lib": [
        "esnext"
      ]
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": {
      "files": true,
      "transpileOnly": true
    }
  }
  